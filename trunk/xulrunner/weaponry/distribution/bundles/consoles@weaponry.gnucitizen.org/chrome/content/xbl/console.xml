<!DOCTYPE bindings SYSTEM "chrome://common.weaponry.gnucitizen.org/locale/xbl/console.dtd">
<bindings
	xmlns="http://www.mozilla.org/xbl"
	xmlns:xbl="http://www.mozilla.org/xbl"
	xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
	<binding id="console" extends="chrome://common.weaponry.gnucitizen.org/content/xbl/basebox.xml#basebox">
		<resources>
			<stylesheet src="chrome://consoles.weaponry.gnucitizen.org/content/css/bindings.css"/>
		</resources>
		
		<content>
			<xul:vbox class="console-container" flex="1">
				<xul:iframe class="console-iframe" src="chrome://consoles.weaponry.gnucitizen.org/content/htm/console.htm" flex="1"/>
			</xul:vbox>
		</content>
		
		<implementation>
			<property name="$container">
				<getter><![CDATA[
					return document.getAnonymousNodes(this)[0];
				]]></getter>
			</property>
			
			<property name="$iframe">
				<getter><![CDATA[
					return this.$container.childNodes[0];
				]]></getter>
			</property>
			
			<method name="focus">
				<body><![CDATA[
					if (!this.$iframe.contentWindow.focusPrompt) {
						let self = this;
						
						setTimeout(function () {
							self.$iframe.contentWindow.focusPrompt();
						}, 100);
					} else {
						this.$iframe.contentWindow.focusPrompt();
					}
				]]></body>
			</method>
			
			<constructor>
				<action><![CDATA[
					let self = this;
					
					this._bindEvent(this, 'click', function (event) {
						self.focus();
					});
					
					let type = this.getAttribute('type');
					
					this._bindEvent(this.$iframe, 'DOMContentLoaded', function (event) {
						event.target.defaultView.setType(type);
					});
				]]></action>
			</constructor>
			
			<destructor>
				<action><![CDATA[
					// pass
				]]></action>
			</destructor>
		</implementation>
	</binding>
	
</bindings>
