<!DOCTYPE bindings SYSTEM "chrome://org.gnucitizen.weaponry.browser/locale/xbl/statusbox.dtd">
<bindings
	xmlns="http://www.mozilla.org/xbl"
	xmlns:xbl="http://www.mozilla.org/xbl"
	xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
	<binding id="statusbox" extends="chrome://org.gnucitizen.weaponry.common/content/xbl/basebox.xml#basebox">
		<resources>
			<stylesheet src="chrome://org.gnucitizen.weaponry.browser/content/css/bindings.css"/>
		</resources>
		
		<content>
			<xul:vbox class="statusbox-container" flex="1">
				<xul:panel class="statusbox-panel" noautohide="true" noautofocus="true" flex="1">
					<xul:label class="statusbox-label" crop="right" flex="1"/>
				</xul:panel>
			</xul:vbox>
		</content>
		
		<implementation>
			<property name="$container">
				<getter><![CDATA[
					return document.getAnonymousNodes(this)[0];
				]]></getter>
			</property>
			
			<property name="$panel">
				<getter><![CDATA[
					return this.$container.childNodes[0];
				]]></getter>
			</property>
			
			<property name="$label">
				<getter><![CDATA[
					return this.$panel.childNodes[0];
				]]></getter>
			</property>
			
			<property name="value">
				<getter><![CDATA[
					return this.$label.value;
				]]></getter>
				
				<setter><![CDATA[
					this.$label.value = val;
					
					if (this.hideTimeout) {
						clearTimeout(this.hideTimeout);
					} else {
						this.$panel.openPopup(this, 'before_start', 0, 0, false, false);
					}
					
					let timeout = weaponryCommon.getPref('org.gnucitizen.weaponry.browser.statusbox.timeout');
					let self = this;
					
					this.hideTimeout = setTimeout(function () {
						self.$panel.hidePopup();
						
						delete self.hideTimeout;
					}, timeout ? timeout : 3000);
				]]></setter>
			</property>
			
			<constructor>
				<action><![CDATA[
					// pass
				]]></action>
			</constructor>
			
			<destructor>
				<action><![CDATA[
					// pass
				]]></action>
			</destructor>
		</implementation>
	</binding>
	
</bindings>
