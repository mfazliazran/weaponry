<!DOCTYPE bindings SYSTEM "chrome://common.weaponry.gnucitizen.org/locale/xbl/htmlbox.dtd">
<bindings
	xmlns="http://www.mozilla.org/xbl"
	xmlns:xbl="http://www.mozilla.org/xbl"
	xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
	<binding id="htmlbox" extends="chrome://common.weaponry.gnucitizen.org/content/xbl/basebox.xml#basebox">
		<content>
			<xul:vbox class="htmlbox-container" flex="1">
				<xul:description class="htmlbox-description" flex="1"/>
			</xul:vbox>
		</content>
		
		<implementation>
			<property name="$container">
				<getter><![CDATA[
					return document.getAnonymousNodes(this)[0];
				]]></getter>	
			</property>
			
			<property name="$description">
				<getter><![CDATA[
					return this.$container.childNodes[0];
				]]></getter>	
			</property>
			
			<property name="value">
				<getter><![CDATA[
					if (this.$description.firstChild) {
						this.$description.firstChild.innerHTML;
					} else {
						return '';
					}
				]]></getter>
				
				<setter><![CDATA[
					if (this.$description.firstChild) {
						this.$description.removeChild(this.$description.firstChild);
					}
					
					let $div = document.createElementNS('http://www.w3.org/1999/xhtml', 'div');
					
					$div.innerHTML = val;
					
					this.$description.appendChild($div);
				]]></setter>
			</property>
			
			<constructor>
				<action><![CDATA[
					this.value = this.getAttribute('value');
					
					this._bindEvent(this, 'DOMAttrModified', function (event) {
						if (event.target == this && event.attrName == 'value') {
							this.value = event.newValue;
						}
					});
				]]></action>
			</constructor>
			
			<destructor>
				<action><![CDATA[
					// pass
				]]></action>
			</destructor>
		</implementation>
	</binding>
	
</bindings>
