<?xml-stylesheet href="chrome://common.weaponry.gnucitizen.org/skin/ovl/toolsMenu.css" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://common.weaponry.gnucitizen.org/locale/ovl/toolsMenu.dtd">
<overlay xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
	<script type="application/x-javascript" src="chrome://common.weaponry.gnucitizen.org/content/ovl/toolsMenu.js"/>
	
	<stringbundleset id="common-stringbundleset">
		<stringbundle id="tools-menu-properties-stringbundle" src="chrome://common.weaponry.gnucitizen.org/locale/ovl/toolsMenu.properties"/>
	</stringbundleset>
	
	<commandset id="common-commandset">
		<command id="tools-menu-open-add-ons-command" label="&tools-menu-open-add-ons-command-label;" oncommand="return handleToolsMenuOpenAddOnsCommandEvent(event);"/>
		<command id="tools-menu-open-error-console-command" label="&tools-menu-open-error-console-command-label;" oncommand="return handleToolsMenuOpenErrorConsoleCommandEvent(event);"/>
	</commandset>
	
	<menu id="tools-menu" label="&tools-menu-label;">
		<menupopup id="tools-menupopup">
			<menuitem id="tools-menupopup-open-add-ons-menuitem" command="tools-menu-open-add-ons-command"/>
			<menuitem id="tools-menupopup-open-error-console-menuitem" command="tools-menu-open-error-console-command"/>
		</menupopup>
	</menu>
	
	<box id="common-box">
		<menupopup id="tools-context-menupopup">
			<menuitem id="tools-context-menupopup-open-add-ons-menuitem" command="tools-menu-open-add-ons-command"/>
			<menuitem id="tools-context-menupopup-open-error-console-menuitem" command="tools-menu-open-error-console-command"/>
		</menupopup>
	</box>
	
</overlay>
