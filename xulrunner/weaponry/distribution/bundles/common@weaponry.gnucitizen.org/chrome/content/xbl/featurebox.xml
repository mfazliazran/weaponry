<!DOCTYPE bindings SYSTEM "chrome://common.weaponry.gnucitizen.org/locale/xbl/featurebox.dtd">
<bindings
	xmlns="http://www.mozilla.org/xbl"
	xmlns:xbl="http://www.mozilla.org/xbl"
	xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
	<binding id="featurebox" extends="chrome://common.weaponry.gnucitizen.org/content/xbl/basebox.xml#basebox">
		<content>
			<xul:vbox class="featurebox-container" flex="1">
				<xul:deck class="featurebox-deck" flex="1">
					<xul:vbox class="featurebox-enable-vbox" flex="1">
						<xul:image class="featurebox-enable-image" src="chrome://common.weaponry.gnucitizen.org/skin/xbl/images/feature.png"/>
						<xul:label class="featurebox-enable-label" xbl:inherits="value=description"/>
						<xul:button class="featurebox-enable-button" xbl:inherits="label"/>
					</xul:vbox>
					
					<xul:vbox class="featurebox-content" flex="1">
						<children/>
					</xul:vbox>
				</xul:deck>
			</xul:vbox>
		</content>
		
		<implementation>
			<property name="$container">
				<getter><![CDATA[
					return document.getAnonymousNodes(this)[0];
				]]></getter>	
			</property>
			
			<property name="$deck">
				<getter><![CDATA[
					return this.$container.childNodes[0];
				]]></getter>	
			</property>
			
			<property name="$enableVbox">
				<getter><![CDATA[
					return this.$deck.childNodes[0];
				]]></getter>	
			</property>
			
			<property name="$enableImage">
				<getter><![CDATA[
					return this.$enableVbox.childNodes[0];
				]]></getter>	
			</property>
			
			<property name="$enableLabel">
				<getter><![CDATA[
					return this.$enableVbox.childNodes[1];
				]]></getter>	
			</property>
			
			<property name="$enableButton">
				<getter><![CDATA[
					return this.$enableVbox.childNodes[2];
				]]></getter>	
			</property>
			
			<property name="$content">
				<getter><![CDATA[
					return this.$deck.childNodes[1];
				]]></getter>	
			</property>
			
			<constructor>
				<action><![CDATA[
					let self = this;
					
					this.$enableButton.addEventListener('click', function (event) {
						if (self._fireEvent('enable')) {
							self.$deck.selectedIndex = 1;
						}
					}, false);
				]]></action>
			</constructor>
			
			<destructor>
				<action><![CDATA[
					// pass
				]]></action>
			</destructor>
		</implementation>
	</binding>
	
</bindings>
