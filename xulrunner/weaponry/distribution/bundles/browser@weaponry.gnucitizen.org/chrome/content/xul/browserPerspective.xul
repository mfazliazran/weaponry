<?xul-overlay href="chrome://common.weaponry.gnucitizen.org/content/ovl/common.xul"?>
<?xml-stylesheet href="chrome://browser.weaponry.gnucitizen.org/content/css/bindings.css" type="text/css"?>
<?xml-stylesheet href="chrome://browser.weaponry.gnucitizen.org/skin/xul/browserPerspective.css" type="text/css"?>
<!DOCTYPE page SYSTEM "chrome://browser.weaponry.gnucitizen.org/locale/xul/browserPerspective.dtd">
<page xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	id="browser-perspective" title="&browser-perspective-title;" windowtype="browser.weaponry.gnucitizen.org:browser-perspective"
	width="800" height="640" screenX="100" screenY="100" persist="width height screenX screenY sizemode">
	
	<script type="application/x-javascript" src="chrome://browser.weaponry.gnucitizen.org/content/inc/common.js"/>
	<script type="application/x-javascript" src="chrome://browser.weaponry.gnucitizen.org/content/xul/browserPerspective.js"/>
	
	<stringbundleset id="browser-perspective-stringbundleset">
		<stringbundle id="browser-perspective-properties-stringbundle" src="chrome://browser.weaponry.gnucitizen.org/locale/xul/browserPerspective.properties"/>
	</stringbundleset>
	
	<commandset id="browser-perspective-commandset">
		<command id="browser-perspective-open-tab-command" oncommand="return handleOpenTabCommandEvent(event);"/>
		<command id="browser-perspective-close-tab-command" oncommand="return handleCloseTabCommandEvent(event);"/>
	</commandset>
	
	<keyset id="browser-perspective-keyset">
		<key id="browser-perspective-open-tab-key" modifiers="accel" key="t" command="browser-perspective-open-tab-command"/>
		<key id="browser-perspective-close-tab-key" modifiers="accel" key="w" command="browser-perspective-close-tab-command"/>
	</keyset>
	
	<vbox id="browser-perspective-content-vbox" flex="1">
		<richtabbox id="browser-perspective-tabs-richtabbox" flex="1">
			<toolbar id="browser-perspective-tabs-toolbar" class="small">
				<toolbarbutton id="browser-perspective-open-tab-toolbarbutton" label="&browser-perspective-open-tab-toolbarbutton-label;" command="browser-perspective-open-tab-command"/>
			</toolbar>
			
			<richtabpanels id="browser-perspective-tabs-richtabpanels"/>
		</richtabbox>
	</vbox>
	
	<box id="common-box"/>
	
</page>
