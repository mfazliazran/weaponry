<!DOCTYPE bindings SYSTEM "chrome://common.weaponry.gnucitizen.org/locale/xbl/codeeditor.dtd">
<bindings
	xmlns="http://www.mozilla.org/xbl"
	xmlns:xbl="http://www.mozilla.org/xbl"
	xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
	<binding id="codeeditor" extends="chrome://common.weaponry.gnucitizen.org/content/xbl/basebox.xml#basebox">
		<resources>
			<stylesheet src="chrome://editors.weaponry.gnucitizen.org/content/css/bindings.css"/>
		</resources>
		
		<content>
			<xul:vbox class="codeeditor-container" flex="1">
				<xul:iframe class="codeeditor-iframe" src="chrome://editors.weaponry.gnucitizen.org/content/htm/codeEditor.htm" flex="1"/>
			</xul:vbox>
		</content>
		
		<implementation>
			<property name="$container">
				<getter><![CDATA[
					return document.getAnonymousNodes(this)[0];
				]]></getter>
			</property>
			
			<property name="$iframe">
				<getter><![CDATA[
					return this.$container.childNodes[0];
				]]></getter>
			</property>
			
			<property name="theme">
				<getter><![CDATA[
					return this.$iframe.contentWindow.getTheme();
				]]></getter>
				
				<setter><![CDATA[
					return this.$iframe.contentWindow.setTheme(val);
				]]></setter>
			</property>
			
			<property name="mode">
				<getter><![CDATA[
					return this.$iframe.contentWindow.getMode();
				]]></getter>
				
				<setter><![CDATA[
					return this.$iframe.contentWindow.setMode(val);
				]]></setter>
			</property>
			
			<property name="source">
				<getter><![CDATA[
					return this.$iframe.contentWindow.getSource();
				]]></getter>
				
				<setter><![CDATA[
					return this.$iframe.contentWindow.setSource(val);
				]]></setter>
			</property>
			
			<constructor>
				<action><![CDATA[
					let theme = this.hasAttribute('theme') ? this.getAttribute('theme') : 'twilight';
					let mode = this.hasAttribute('mode') ? this.getAttribute('mode') : 'javascript';
					let source = this.hasAttribute('source') ? this.getAttribute('source') : '';
					let self = this;
					
					this._bindEvent(this.$iframe, 'DOMContentLoaded', function (event) {
						self.theme = theme;
						self.mode = mode;
						self.source = source;
					});
				]]></action>
			</constructor>
			
			<destructor>
				<action><![CDATA[
					// pass
				]]></action>
			</destructor>
		</implementation>
	</binding>
	
</bindings>
